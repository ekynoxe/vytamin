<% page_title "Admin pages" %>
<h1><span class="orange">Admin</span> pages</h1>
<div id="box">
	<h2><%= link_to 'Admin sports', admin_sports_url %></h2>
	<ul>
		<% Sport.all.each do |sport| %>
		<li><%= sport.name %></li>
		<% end %>
	</ul>
	
	<h2><%= link_to 'Admin users', admin_users_url %></h2>
	<ul>
		<% User.all.each do |user| %>
		<li><%= user.full_name %></li>
		<% end %>
	</ul>
	
	<h2><%= link_to 'Admin entries', admin_entries_url %></h2>
	<p>There are <%= Entry.all.size %> entries</p>
</div>